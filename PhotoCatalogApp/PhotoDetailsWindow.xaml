<Window x:Class="PhotoCatalogApp.PhotoDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Photo Details" Height="740" Width="1360">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Nazwa:" FontWeight="Bold"/>
            <TextBlock x:Name="NameText"/>
            <Image x:Name="PhotoImage" Width="360" Height="360" Margin="0,10"/>
            <TextBlock Text="Szerokość:" FontWeight="Bold"/>
            <TextBlock x:Name="WidthText"/>
            <TextBlock Text="Wysokość:" FontWeight="Bold"/>
            <TextBlock x:Name="HeightText"/>
            <TextBlock Text="Głębokość:" FontWeight="Bold"/>
            <TextBlock x:Name="DepthText"/>
            <TextBlock Text="Waga:" FontWeight="Bold"/>
            <TextBlock x:Name="WeightText"/>
            <TextBlock Text="Szacowany Rok:" FontWeight="Bold"/>
            <TextBlock x:Name="EstimatedYearText"/>
            <TextBlock Text="Materiał:" FontWeight="Bold"/>
            <TextBlock x:Name="MaterialText"/>
            <TextBlock Text="Uwagi:" FontWeight="Bold"/>
            <!-- Zmieniamy etykietę -->
            <TextBlock x:Name="DescriptionText"/>
            <!-- Opis zmieniony na Uwagi -->
            <Button Content="Zamknij" Width="100" Margin="10" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
