<Window x:Class="PhotoCatalogApp.UploadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Upload Photo" Height="450" Width="800"
        WindowState="Maximized">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="SelectedImage" Width="300" Height="300" Margin="0,10"/>
            <TextBox x:Name="WidthTextBox" Width="200" Margin="0,10" Text="Szerokość" GotFocus="RemoveText" LostFocus="AddText"/>
            <TextBox x:Name="HeightTextBox" Width="200" Margin="0,10" Text="Wysokość" GotFocus="RemoveText" LostFocus="AddText"/>
            <TextBox x:Name="WeightTextBox" Width="200" Margin="0,10" Text="Waga" GotFocus="RemoveText" LostFocus="AddText"/>
            <TextBox x:Name="EstimatedYearTextBox" Width="200" Margin="0,10" Text="Szacowany Rok" GotFocus="RemoveText" LostFocus="AddText"/>
            <TextBox x:Name="DescriptionTextBox" Width="200" Margin="0,10" Text="Opis" GotFocus="RemoveText" LostFocus="AddText"/>
            <TextBlock x:Name="FileSizeTextBlock" Margin="0,10"/>
            <Button Content="Zatwierdź" Width="100" Margin="0,10" Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
